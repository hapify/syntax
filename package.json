{
  "name": "@hapify/syntax",
  "version": "0.9.1",
  "description": "Templating syntax optimized for Hapify models handling.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "update": "npm-check -u",
    "test": "nyc mocha",
    "lint": "prettier --write '**/*.ts'",
    "build": "rimraf dist && tsc -p .",
    "convert-to-long": "ts-node utils/convert-to-long.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:hapify/syntax.git"
  },
  "keywords": [
    "hapify",
    "syntax"
  ],
  "author": "Edouard Demotes-Mainard <edouard@tractr.net>",
  "license": "MIT",
  "homepage": "https://github.com/hapify/syntax#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@hapi/code": "^8.0.2",
    "@types/line-column": "^1.0.0",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.8",
    "husky": "^4.3.0",
    "mocha": "^8.2.1",
    "npm-check": "^5.9.2",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@hapi/hoek": "^9.1.0",
    "@hapify/vm": "^0.3.4",
    "escape-string-regexp": "^4.0.0",
    "line-column": "^1.0.2"
  },
  "engines": {
    "node": ">=9"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged --pattern \"**/*.ts\""
    }
  }
}
